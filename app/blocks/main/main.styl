.main
	position relative
	padding-left 205px
	padding-right 15px
	
	min-height 100vh
	display flex
	flex-direction column
	background-color #ffffff
	overflow hidden
	&__body
		position relative
		z-index 0
		flex 1 0 auto
		&:after
			position absolute
			z-index -1
			top 0
			left -205px
			right -15px
			bottom 0
			content ''
			width calc(100% + 300px)
			height 100%
			background-color #edf3f8 



	tr(padding-left .3s ease)
	+r($tL)
		padding-left 55px
	&__top
		margin-top 30px
		margin-bottom 30px
		display flex
		justify-content space-between
		align-items center
	&__button
		max-width 160px
		width 100%
		
	&__table-w
		margin-bottom 140px	
		+r($tL)
			overflow-x auto

	

.main_view
	.main__top
		justify-content flex-start
	.main__title
		margin-left 12px
	.main__button
		order -1
		max-width 34px
		width 100%
		height 34px
		// border-radius 8px
		// background-color #0085ff
		text-indent -9999px
		
	.main__body
		padding-bottom 100px