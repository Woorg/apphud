.page
	position relative
	min-height 100vh
	display flex
	flex-direction column
	background-color #ffffff
	color #1a344b
	font-family $u
	font-size 14px
	font-weight 400
	&__inner
		flex 1 0 auto
		

.container
	margin-right auto
	margin-left auto
	padding-left 15px
	padding-right 15px
	// width 1140px
	width 100%

.title
	color #1a344b
	font-size 28px
	font-weight 700


.button
	position relative
	border none
	padding-top 12px
	padding-bottom 11px
	display inline-block
	height 40px
	background-color #0085ff
	color #ffffff
	font-size 14px
	font-weight 400
	line-height 1
	text-align center
	text-decoration none
	border-radius 8px
	tr(background-color .3s ease)
	&:hover
		background-color darken(#0085ff, 10)
		tr(background-color .3s ease)
	&__icon
		position absolute
		top 50%
		left 10px
		transform translateY(-50%)

